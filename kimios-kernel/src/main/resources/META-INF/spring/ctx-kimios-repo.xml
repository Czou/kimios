<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Repository -->
    <bean id="repositoryFactory" class="org.kimios.kernel.repositories.dao.RepositoryFactory" parent="hfactory"/>

    <bean id="repositoryController" class="org.kimios.kernel.repositories.RepositoryServiceImpl">
        <property name="repositoryFactory" ref="repositoryFactory"/>
    </bean>


    <bean id="repositoryManager" class="org.kimios.kernel.repositories.RepositoryManager" factory-method="init"
            init-method="postInit" depends-on="configurationManager">
        <property name="repositoryService" ref="repositoryController"/>
    </bean>

</beans>
