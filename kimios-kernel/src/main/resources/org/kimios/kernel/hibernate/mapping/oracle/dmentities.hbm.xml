<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd"
        version="2.0">
    <entity class="org.kimios.kernel.dms.DMEntityImpl" metadata-complete="false">
        <attributes>
            <basic name="path" optional="false">
                <column name="dm_entity_path" length="2000" unique="true"/>
            </basic>
        </attributes>
    </entity>
    <entity class="org.kimios.kernel.dms.DocumentComment" metadata-complete="false">
        <attributes>
            <basic name="comment" optional="false">
                <column name="comment_content" length="2000"/>
            </basic>
        </attributes>
    </entity>
    <entity class="org.kimios.kernel.dms.DocumentWorkflowStatusRequest" metadata-complete="false">
        <table name="doc_workflow_status_request" />
        <attributes>
            <basic name="comment" optional="false">
                <column name="request_comment" length="2000"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
