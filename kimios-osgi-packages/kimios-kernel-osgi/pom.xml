        <profile>
            <id>blueprint-mode</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <dep.include>*.properties,*.xml,*.txt</dep.include>
                <spring.context></spring.context>
                <persistence>META-INF/persistence.xml</persistence>
                <osgi.resources>blueprint</osgi.resources>
                <addonimport></addonimport>
            </properties>
        </profile>
    </profiles>

    <build>
