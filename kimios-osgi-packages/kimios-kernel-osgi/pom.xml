                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/add-resource</outputDirectory>
                                    <includes>${dep.include}</includes>
                                    <excludes>**/*.class</excludes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.kimios</groupId>
                                    <artifactId>kimios-bonita</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/add-resource</outputDirectory>
                                    <includes>${dep.include}</includes>
                                    <excludes>**/*.class</excludes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.kimios</groupId>
                                    <artifactId>kimios-share</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/add-resource</outputDirectory>
                                    <includes>${dep.include}</includes>
                                    <excludes>**/*.class</excludes>
                                </artifactItem>
                            </artifactItems>
                            <includes>META-INF/spring/**/*.*,*.xml,*.properties,*.txt</includes>
