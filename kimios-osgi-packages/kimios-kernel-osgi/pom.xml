                    <execution>
                        <id>unpack</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.kimios</groupId>
                                    <artifactId>kimios-utils</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/add-resource</outputDirectory>
                                    <includes>${dep.include}</includes>
                                    <excludes>**/*.class</excludes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.kimios</groupId>
                                    <artifactId>kimios-kernel</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/add-resource</outputDirectory>
                                    <includes>${dep.include}</includes>
                                    <excludes>**/*.class</excludes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.kimios</groupId>
                                    <artifactId>kimios-index</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/add-resource</outputDirectory>
                                    <includes>${dep.include}</includes>
                                    <excludes>**/*.class</excludes>
                                </artifactItem>
                                <artifactItem>
