<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="kimios-bundle">
    <context-param>
        <param-name>kimios.app.name</param-name>
        <param-value>server</param-value>
    </context-param>
    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.kimios.utils.spring.KimiosWebApplicationContext</param-value>
    </context-param>
    <context-param>
        <param-name>service-list-stylesheet</param-name>
        <param-value>/web/bootstrap/css/style.css</param-value>
    </context-param>
    <context-param>
        <param-name>service-list-title</param-name>
        <param-value>Kimios Service Bus</param-value>
    </context-param>
    <filter>
        <filter-name>encodingfilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.kimios.deployer.web.AppContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>InstallerServlet</servlet-name>
        <servlet-class>org.kimios.deployer.web.InstallerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CXFServlet</servlet-name>
        <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InstallerServlet</servlet-name>
        <url-pattern>/installer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CXFServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>inc</extension>
        <mime-type>text/plain</mime-type>
    </mime-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
